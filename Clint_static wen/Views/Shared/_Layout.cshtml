    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    
    <!-- Three.js for 3D Effects -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"></script>

    
    <script>
        // Initialize AOS
        AOS.init({
            duration: 1000,
            once: true
        });

        // Navbar scroll effect
        window.addEventListener('scroll', function() {
            const navbar = document.querySelector('.navbar');
            if (window.scrollY > 100) {
                navbar.style.padding = '0.5rem 0';
                navbar.style.boxShadow = '0 5px 20px rgba(0,0,0,0.1)';
            } else {
                navbar.style.padding = '1rem 0';
                navbar.style.boxShadow = 'none';
            }
        });

        // Create particle background
        function createParticles() {
            const container = document.createElement('div');
            container.className = 'particles';
            document.body.appendChild(container);

            for (let i = 0; i < 50; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                
                const size = Math.random() * 5 + 2;
                particle.style.width = size + 'px';
                particle.style.height = size + 'px';
                particle.style.left = Math.random() * 100 + 'vw';
                particle.style.animationDelay = Math.random() * 20 + 's';
                particle.style.opacity = Math.random() * 0.5 + 0.2;
                particle.style.background = Math.random() > 0.5 ? 'var(--primary-color)' : 'var(--accent-color)';
                
                container.appendChild(particle);
            }
        }

        // Create simple 3D car model
        function create3DCar() {
            const scene = new THREE.Scene();
            const camera = new THREE.PerspectiveCamera(75, window.innerWidth / window.innerHeight, 0.1, 1000);
            const renderer = new THREE.WebGLRenderer({ alpha: true });
            
            renderer.setSize(300, 200);
            renderer.setClearColor(0x000000, 0);
            
            const carContainer = document.getElementById('3d-car');
            if (carContainer) {
                carContainer.appendChild(renderer.domElement);
                
                // Create car body
                const geometry = new THREE.BoxGeometry(2, 1, 4);
                const material = new THREE.MeshBasicMaterial({ color: 0x1a73e8 });
                const car = new THREE.Mesh(geometry, material);
                scene.add(car);
                
                camera.position.z = 5;
                
                function animate() {
                    requestAnimationFrame(animate);
                    car.rotation.y += 0.01;
                    renderer.render(scene, camera);
                }
                animate();
            }
        }

        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            createParticles();
            create3DCar();
            
            // Smooth scroll for anchor links
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    const target = document.querySelector(this.getAttribute('href'));
                    if (target) {
                        target.scrollIntoView({
                            behavior: 'smooth',
                            block: 'start'
                        });
                    }
                });
            });
            
            // Add hover effects to cards
            document.querySelectorAll('.card-3d').forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-10px) rotateX(5deg)';
                });
                
                card.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0) rotateX(0)';
                });
            });
        });

        // Booking form validation
        function validateBookingForm() {
            const form = document.getElementById('bookingForm');
            if (form) {
                form.addEventListener('submit', function(e) {
                    const name = document.getElementById('CustomerName').value;
                    const phone = document.getElementById('Phone').value;
                    const date = document.getElementById('PickupDate').value;
                    
                    if (!name || !phone || !date) {
                        e.preventDefault();
                        alert('Please fill all required fields');
                        return false;
                    }
                    
                    if (phone.length < 10) {
                        e.preventDefault();
                        alert('Please enter a valid phone number');
                        return false;
                    }
                    
                    return true;
                });
            }
        }

        // Initialize form validation
        validateBookingForm();
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
