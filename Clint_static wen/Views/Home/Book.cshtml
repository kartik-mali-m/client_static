@{
    ViewData["Title"] = "Book Now - Javeriya Cabs";
}
<style>
    /* =============================== */
    /* STATIC BOOKING PAGE – NO SCROLL */
    /* =============================== */

    .booking-section {
        height: calc(100vh - 72px); /* navbar height */
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0;
    }

        .booking-section .container {
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .booking-section .row {
            width: 100%;
            justify-content: center;
        }

        .booking-section .card {
            max-height: 85vh;
            overflow: hidden;
        }

        /* Inputs compact */
        .booking-section .form-control {
            padding: 10px 14px;
            font-size: 0.95rem;
        }

        /* Button fixed size */
        .booking-section button {
            padding: 12px;
            font-size: 1rem;
        }

    .booking-section {
        height: calc(100vh - 72px); /* navbar height */
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0;
        margin: 0;
    }

        .booking-section .container,
        .booking-section .row {
            height: 100%;
        }

        .booking-section .card {
            max-height: 80vh;
        }
    /* ================================= */
    /* PREMIUM MOBILE BOOKING EXPERIENCE */
    /* ================================= */

    .booking-section {
        height: calc(100vh - 72px);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 12px;
    }

        /* Card container */
        .booking-section .card {
            width: 100%;
            max-width: 380px;
            background: linear-gradient( 180deg, rgba(20, 30, 60, 0.92), rgba(10, 15, 35, 0.96) );
            border-radius: 18px;
            border: 1px solid rgba(26, 115, 232, 0.35);
            box-shadow: 0 15px 40px rgba(0,0,0,0.6), inset 0 0 25px rgba(26,115,232,0.08);
            padding: 20px;
        }

        /* Title */
        .booking-section h3 {
            font-size: 1.2rem;
            font-weight: 600;
            letter-spacing: 0.5px;
            color: #e5edff;
            margin-bottom: 16px;
        }

        /* Labels */
        .booking-section label {
            font-size: 0.8rem;
            color: #a8b3cf;
            margin-bottom: 4px;
        }

        /* Inputs */
        .booking-section .form-control {
            background: rgba(255,255,255,0.05);
            border: 1px solid rgba(255,255,255,0.15);
            border-radius: 10px;
            height: 42px;
            font-size: 0.9rem;
            color: #fff;
            padding: 8px 12px;
            transition: all 0.3s ease;
        }

            .booking-section .form-control:focus {
                background: rgba(255,255,255,0.08);
                border-color: #1a73e8;
                box-shadow: 0 0 0 2px rgba(26,115,232,0.25);
            }

        /* Reduce spacing */
        .booking-section .mb-3 {
            margin-bottom: 12px !important;
        }

        /* Submit Button */
        .booking-section button {
            height: 46px;
            border-radius: 12px;
            font-size: 0.95rem;
            font-weight: 600;
            background: linear-gradient(135deg, #1a73e8, #0d47a1);
            border: none;
            box-shadow: 0 10px 25px rgba(26,115,232,0.45);
            transition: all 0.3s ease;
        }

            .booking-section button:hover {
                transform: translateY(-1px);
                box-shadow: 0 14px 30px rgba(26,115,232,0.6);
            }

    /* Remove footer gap */
    .no-footer-page footer {
        display: none !important;
    }

    /* Disable scroll on booking page */
    .no-footer-page {
        overflow: hidden;
    }

</style>
<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">

                <div class="card shadow-lg p-4 card-3d">
                    <h3 class="text-center mb-4">
                        <i class="fas fa-car me-2"></i>Book Your Cab
                    </h3>

                    <form id="bookingForm" onsubmit="sendBooking(event)">

                        <div class="mb-3">
                            <label class="form-label">Name</label>
                            <input type="text" id="name" class="form-control" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Phone (WhatsApp)</label>
                            <input type="tel" id="phone" class="form-control" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Pickup Location</label>
                            <input type="text" id="pickup" class="form-control" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Drop Location</label>
                            <input type="text" id="drop" class="form-control" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Pickup Date</label>
                            <input type="date" id="date" class="form-control" required>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 btn-lg">
                            <i class="fas fa-paper-plane me-2"></i>Submit Booking
                        </button>

                    </form>

                </div>

            </div>
        </div>
    </div>
</section>
<script>
    function sendBooking(event) {
        event.preventDefault();

        let name = document.getElementById("name").value;
        let phone = document.getElementById("phone").value;
        let pickup = document.getElementById("pickup").value;
        let drop = document.getElementById("drop").value;
        let date = document.getElementById("date").value;

        let adminNumber = "+919657323988"; // WITH country code
        let userNumber = "91" + phone;

     let adminMsg =
    "🚖✨ *JAVERIYA CABS – NEW BOOKING* ✨🚖\n\n" +
    "👤 *Customer Name:* " + name + "\n" +
    "📞 *Mobile:* " + phone + "\n\n" +
    "📍 *Pickup Location:* " + pickup + "\n" +
    "🏁 *Drop Location:* " + drop + "\n" +
    "📅 *Pickup Date:* " + date + "\n\n" +
    "⚡ *Status:* New Booking Received\n" +
    "🕒 *Service:* 24/7 Available\n\n" +
    "📌 Please contact the customer to confirm the ride.";


            let userMsg =
    "✅🚖 *BOOKING CONFIRMED – JAVERIYA CABS* 🚖✅\n\n" +
    "Hello *" + name + "*,\n\n" +
    "Thank you for choosing *Javeriya Cabs & Travels* 💙\n\n" +
    "📍 *Pickup:* " + pickup + "\n" +
    "🏁 *Drop:* " + drop + "\n" +
    "📅 *Date:* " + date + "\n\n" +
    "👨‍✈️ Our driver & team will contact you shortly.\n\n" +
    "🕒 *24/7 Service Available*\n" +
    "📞 *Emergency Support:* +91 96573 23988\n\n" +
    "✨ Have a safe & comfortable journey!";

        adminMsg = encodeURIComponent(adminMsg);
        userMsg = encodeURIComponent(userMsg);

        // Admin WhatsApp
        window.open("https://wa.me/" + adminNumber + "?text=" + adminMsg, "_blank");

        // User WhatsApp
        setTimeout(() => {
            window.open("https://wa.me/" + userNumber + "?text=" + userMsg, "_blank");
        }, 1200);
    }
</script>
