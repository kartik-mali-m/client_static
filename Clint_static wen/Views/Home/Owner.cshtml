@model dynamic
@{
    ViewData["Title"] = "Owner Information";
}

<!-- Hero Section -->
<section class="hero-section" style="height: 60vh; background: linear-gradient(rgba(0,0,0,0.9), rgba(0,0,0,0.9)), url('/images/owner-bg.jpg') center/cover;">
    <div class="container h-100 d-flex align-items-center">
        <div class="row">
            <div class="col-lg-8">
                <h1 class="hero-title">Owner Information</h1>
                <p class="lead">Meet the driving force behind our exceptional service</p>
            </div>
        </div>
    </div>
</section>

<!-- Owner Details -->
<section class="py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-4" data-aos="fade-right">
                <div class="card-3d p-4 text-center">
                    <div class="owner-photo mb-4">
                        <div class="rounded-circle overflow-hidden mx-auto" style="width: 200px; height: 200px; border: 5px solid var(--primary-color);">
                            <img src="/images/owner.jpg" alt="Owner" class="img-fluid" style="object-fit: cover; height: 100%;">
                        </div>
                    </div>
                    <h3 class="mb-2">@Model.Name</h3>
                    <p class="text-primary mb-3">
                        <i class="fas fa-map-marker-alt me-2"></i>@Model.Location
                    </p>
                    <div class="contact-badge mb-4">
                        <a href="tel:@Model.Phone" class="btn btn-primary btn-lg">
                            <i class="fas fa-phone me-2"></i>@Model.Phone
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-8" data-aos="fade-left">
                <div class="card-3d p-5">
                    <h2 class="mb-4">About @Model.Name</h2>
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="feature-card p-3 mb-3">
                                <i class="fas fa-car fa-2x text-primary mb-2"></i>
                                <h5>@Model.Services</h5>
                                <p class="mb-0">Professional airport transfer services</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="feature-card p-3 mb-3">
                                <i class="fas fa-history fa-2x text-primary mb-2"></i>
                                <h5>Experience</h5>
                                <p class="mb-0">Over 10 years in transportation business</p>
                            </div>
                        </div>
                    </div>

                    <h4 class="mb-3">Our Commitment</h4>
                    <ul class="list-unstyled">
                        @foreach (var feature in Model.Features)
                        {
                            <li class="mb-2">
                                <i class="fas fa-check-circle text-success me-2"></i>@feature
                            </li>
                        }
                    </ul>

                    <div class="mt-4">
                        <h4>Service Areas</h4>
                        <div class="d-flex flex-wrap gap-2 mt-2">
                            <span class="badge bg-primary p-2">Pune City</span>
                            <span class="badge bg-primary p-2">Lohgaon</span>
                            <span class="badge bg-primary p-2">Airport Zone</span>
                            <span class="badge bg-primary p-2">Hinjewadi</span>
                            <span class="badge bg-primary p-2">Wakad</span>
                            <span class="badge bg-primary p-2">Kharadi</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Testimonials -->
<section class="py-5 bg-dark">
    <div class="container">
        <h2 class="section-title" data-aos="fade-up">Customer Testimonials</h2>
        <div class="row g-4">
            <div class="col-md-4" data-aos="fade-up">
                <div class="card-3d p-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="rounded-circle overflow-hidden me-3" style="width: 60px; height: 60px;">
                            <img src="/images/testimonial1.jpg" alt="Customer" class="img-fluid">
                        </div>
                        <div>
                            <h5 class="mb-0">Rahul Sharma</h5>
                            <small class="text-muted">Business Traveler</small>
                        </div>
                    </div>
                    <p>"Excellent service! Always on time and very professional drivers."</p>
                    <div class="stars">
                        <i class="fas fa-star text-warning"></i>
                        <i class="fas fa-star text-warning"></i>
                        <i class="fas fa-star text-warning"></i>
                        <i class="fas fa-star text-warning"></i>
                        <i class="fas fa-star text-warning"></i>
                    </div>
                </div>
            </div>
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="100">
                <div class="card-3d p-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="rounded-circle overflow-hidden me-3" style="width: 60px; height: 60px;">
                            <img src="/images/testimonial2.jpg" alt="Customer" class="img-fluid">
                        </div>
                        <div>
                            <h5 class="mb-0">Priya Patel</h5>
                            <small class="text-muted">Family Travel</small>
                        </div>
                    </div>
                    <p>"Clean cars, safe drivers, and very reasonable prices. Highly recommended!"</p>
                    <div class="stars">
                        <i class="fas fa-star text-warning"></i>
                        <i class="fas fa-star text-warning"></i>
                        <i class="fas fa-star text-warning"></i>
                        <i class="fas fa-star text-warning"></i>
                        <i class="fas fa-star-half-alt text-warning"></i>
                    </div>
                </div>
            </div>
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="200">
                <div class="card-3d p-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="rounded-circle overflow-hidden me-3" style="width: 60px; height: 60px;">
                            <img src="/images/testimonial3.jpg" alt="Customer" class="img-fluid">
                        </div>
                        <div>
                            <h5 class="mb-0">Amit Kumar</h5>
                            <small class="text-muted">Corporate Client</small>
                        </div>
                    </div>
                    <p>"Reliable airport transfers for our corporate guests. Service is always excellent."</p>
                    <div class="stars">
                        <i class="fas fa-star text-warning"></i>
                        <i class="fas fa-star text-warning"></i>
                        <i class="fas fa-star text-warning"></i>
                        <i class="fas fa-star text-warning"></i>
                        <i class="fas fa-star text-warning"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>