@{
    ViewData["Title"] = "Home - Javeriya Cabs Car Rental";
}



<style>
    /* ================= PREMIUM UI ENHANCEMENTS ================= */

    /* HERO POLISH */
    .hero-section {
        background: radial-gradient(circle at top left, rgba(26,115,232,0.25), transparent 60%), linear-gradient(135deg, #020617, #0f172a);
    }

    .hero-title {
        letter-spacing: 1px;
        line-height: 1.2;
    }

    .hero-content p {
        color: #cbd5f5;
        max-width: 520px;
    }

    /* GLASS CARDS */
    .card-3d {
        background: rgba(255,255,255,0.06);
        border-radius: 22px;
        border: 1px solid rgba(255,255,255,0.12);
        backdrop-filter: blur(14px);
    }

    /* ICON CIRCLE */
    .icon-wrapper {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background: linear-gradient(135deg, rgba(26,115,232,0.25), rgba(0,200,83,0.25));
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 15px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.4);
    }

    /* SECTION BACKDROP */
    section {
        position: relative;
    }

        section::before {
            content: "";
            position: absolute;
            inset: 0;
            background: radial-gradient(circle at center, rgba(255,255,255,0.03), transparent 70%);
            pointer-events: none;
        }

    /* SERVICES CARDS */
    #services .card-3d {
        transition: all 0.4s ease;
    }

        #services .card-3d:hover {
            transform: translateY(-12px) scale(1.03);
            box-shadow: 0 25px 60px rgba(0,0,0,0.55);
        }

    /* VEHICLE IMAGE EFFECT */
    .card-img-top {
        transition: transform 0.6s ease;
    }

    .card-3d:hover .card-img-top {
        transform: scale(1.08);
    }

    /* PRICE STYLE */
    .card-body .h5 {
        font-weight: 700;
    }

    /* EMERGENCY BANNER */
    .bg-danger {
        background: linear-gradient(135deg, #dc2626, #7f1d1d) !important;
    }

        .bg-danger h3 {
            font-weight: 700;
            letter-spacing: 0.5px;
        }

        .bg-danger .btn {
            border-radius: 50px;
            padding: 14px 28px;
        }

    /* BUTTON POLISH */
    .btn {
        border-radius: 12px;
    }

    .btn-outline-light {
        border-color: rgba(255,255,255,0.6);
    }

        .btn-outline-light:hover {
            background: rgba(255,255,255,0.15);
        }

    /* MOBILE REFINEMENT */
    @@media (max-width: 768px) {
        .hero-title

    {
        font-size: 2.4rem;
    }

    .hero-content {
        text-align: center;
    }

        .hero-content p {
            margin: 0 auto 20px;
        }

    .icon-wrapper {
        width: 64px;
        height: 64px;
    }

    }
</style>

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center min-vh-100">
            <div class="col-lg-6 hero-content">
                <h1 class="hero-title animate__animated animate__fadeInLeft">
                    Premium Cab Services
                </h1>
                <p class="lead mb-4 animate__animated animate__fadeInLeft animate__delay-1s">
                    Experience luxury travel with our premium fleet of vehicles.
                    24/7 service, professional drivers, and competitive rates.
                </p>
                <div class="d-flex gap-3 animate__animated animate__fadeInUp animate__delay-2s">
                    <a asp-action="Book" class="btn btn-primary-3d btn-lg">
                        <i class="fas fa-car me-2"></i>Book Your Ride
                    </a>
                    <a href="#services" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-info-circle me-2"></i>Learn More
                    </a>
                </div>
            </div>
            <div class="col-lg-6">
                <!-- 3D Car Model -->
                <div id="3d-car" class="float-animation"></div>
            </div>
        </div>
    </div>
</section>

<!-- Why Choose Us -->
<section id="why-us" class="py-5">
    <div class="container">
        <h2 class="section-title" data-aos="fade-up">Why Choose Javeriya Cabs?</h2>
        <div class="row g-4">
            <div class="col-md-3" data-aos="fade-up" data-aos-delay="100">
                <div class="card-3d text-center p-4 h-100">
                    <div class="icon-wrapper mb-3">
                        <i class="fas fa-shield-alt fa-3x text-primary"></i>
                    </div>
                    <h4>Safety First</h4>
                    <p>All vehicles undergo regular safety checks and maintenance</p>
                </div>
            </div>
            <div class="col-md-3" data-aos="fade-up" data-aos-delay="200">
                <div class="card-3d text-center p-4 h-100">
                    <div class="icon-wrapper mb-3">
                        <i class="fas fa-clock fa-3x text-primary"></i>
                    </div>
                    <h4>24/7 Service</h4>
                    <p>Round-the-clock availability for all your travel needs</p>
                </div>
            </div>
            <div class="col-md-3" data-aos="fade-up" data-aos-delay="300">
                <div class="card-3d text-center p-4 h-100">
                    <div class="icon-wrapper mb-3">
                        <i class="fas fa-car fa-3x text-primary"></i>
                    </div>
                    <h4>Modern Fleet</h4>
                    <p>Well-maintained vehicles with latest amenities</p>
                </div>
            </div>
            <div class="col-md-3" data-aos="fade-up" data-aos-delay="400">
                <div class="card-3d text-center p-4 h-100">
                    <div class="icon-wrapper mb-3">
                        <i class="fas fa-rupee-sign fa-3x text-primary"></i>
                    </div>
                    <h4>Best Prices</h4>
                    <p>Competitive rates without compromising on quality</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Services -->
<section id="services" class="py-5 bg-dark">
    <div class="container">
        <h2 class="section-title" data-aos="fade-up">Our Services</h2>
        <div class="row g-4">
            @foreach (var service in ViewBag.Services)
            {
                <div class="col-md-3" data-aos="flip-left">
                    <div class="card-3d text-center p-4 h-100">
                        <div class="icon-wrapper mb-3">
                            <i class="@service.IconClass fa-3x text-primary"></i>
                        </div>
                        <h4>@service.Title</h4>
                        <p>@service.Description</p>
                        <a href="#" class="btn btn-sm btn-outline-primary mt-2">Learn More</a>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Featured Vehicles -->
<section class="py-5">
    <div class="container">
        <h2 class="section-title" data-aos="fade-up">Featured Vehicles</h2>
        <div class="row g-4">
            @foreach (var vehicle in ViewBag.Vehicles)
            {
                <div class="col-md-3" data-aos="zoom-in">
                    <div class="card-3d">
                        <div class="position-relative overflow-hidden rounded-top">
                            <img src="@vehicle.ImageUrl" class="card-img-top" alt="@vehicle.Name">
                            <div class="position-absolute top-0 end-0 bg-primary text-white p-2">
                                <i class="fas fa-user-friends"></i> @vehicle.Seats Seats
                            </div>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@vehicle.Name</h5>
                            <p class="card-text">@vehicle.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="h5 text-primary">₹@vehicle.PricePerHour<small>/hr</small></span>
                                <a asp-action="Book" class="btn btn-sm btn-primary">Book Now</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Emergency Banner -->
<section class="py-5 bg-danger">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h3 class="text-white mb-0">
                    <i class="fas fa-ambulance me-2"></i>24/7 Emergency Service Available
                </h3>
                <p class="text-white mb-0">Immediate assistance for urgent travel needs</p>
            </div>
            <div class="col-md-4 text-end">
                <a href="tel:09405973633" class="btn btn-light btn-lg glow">
                    <i class="fas fa-phone-alt me-2"></i>Call Now: 09657323988
                    </a>
            </div>
        </div>
    </div>
</section>


























