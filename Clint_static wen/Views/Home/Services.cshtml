@model List<Clint_static_wen.Models.Service>

@{
    ViewData["Title"] = "Our Services";
}

<!-- Hero Section -->
<section class="hero-section" style="height: 50vh; background: linear-gradient(rgba(0,0,0,0.8), rgba(0,0,0,0.8)), url('/images/services-bg.jpg') center/cover;">
    <div class="container h-100 d-flex align-items-center">
        <div class="row">
            <div class="col-lg-8">
                <h1 class="hero-title">Our Services</h1>
                <p class="lead">Comprehensive transportation solutions for all your needs</p>
            </div>
        </div>
    </div>
</section>

<!-- Services Grid -->
<section class="py-5">
    <div class="container">
        <div class="row g-4">
            @foreach (var service in Model)
            {
                <div class="col-lg-4 col-md-6" data-aos="fade-up">
                    <div class="card-3d h-100">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-center mb-3">
                                <div class="icon-circle bg-primary text-white me-3">
                                    <i class="fas fa-car"></i>
                                </div>
                                <h4 class="mb-0">@service.Title</h4>
                            </div>
                            <p>@service.Description</p>
                            <div class="mt-3">
                                <span class="badge bg-primary me-2">Available</span>
                                <span class="badge bg-success">24/7</span>
                            </div>
                            <a asp-action="BookNow" class="btn btn-primary btn-sm mt-3">Book Now</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Additional Services -->
<section class="py-5 bg-dark">
    <div class="container">
        <h2 class="section-title" data-aos="fade-up">Specialized Services</h2>
        <div class="row g-4">
            <div class="col-md-4" data-aos="zoom-in">
                <div class="card-3d text-center p-4">
                    <i class="fas fa-plane-departure fa-3x text-primary mb-3"></i>
                    <h4>Airport Services</h4>
                    <ul class="list-unstyled mt-3">
                        <li><i class="fas fa-check text-success me-2"></i>Meet & Greet</li>
                        <li><i class="fas fa-check text-success me-2"></i>Flight Tracking</li>
                        <li><i class="fas fa-check text-success me-2"></i>Luggage Assistance</li>
                    </ul>
                </div>
            </div>
            <div class="col-md-4" data-aos="zoom-in" data-aos-delay="200">
                <div class="card-3d text-center p-4">
                    <i class="fas fa-briefcase fa-3x text-primary mb-3"></i>
                    <h4>Corporate Services</h4>
                    <ul class="list-unstyled mt-3">
                        <li><i class="fas fa-check text-success me-2"></i>Daily Office Commute</li>
                        <li><i class="fas fa-check text-success me-2"></i>Client Pickup</li>
                        <li><i class="fas fa-check text-success me-2"></i>Corporate Events</li>
                    </ul>
                </div>
            </div>
            <div class="col-md-4" data-aos="zoom-in" data-aos-delay="400">
                <div class="card-3d text-center p-4">
                    <i class="fas fa-calendar-alt fa-3x text-primary mb-3"></i>
                    <h4>Event Services</h4>
                    <ul class="list-unstyled mt-3">
                        <li><i class="fas fa-check text-success me-2"></i>Wedding Cars</li>
                        <li><i class="fas fa-check text-success me-2"></i>Party Transportation</li>
                        <li><i class="fas fa-check text-success me-2"></i>Tour Packages</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>