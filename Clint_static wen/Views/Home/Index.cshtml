@{
    ViewData["Title"] = "Home Page";
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Premium Cab Service | Pune to Konkan</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: #f5f7fa;
        }

        /* NAVBAR */
        .navbar {
            padding: 18px 0;
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 22px;
        }

        /* HERO */
        .hero {
            min-height: 90vh;
            background: linear-gradient(rgba(0,0,0,.6),rgba(0,0,0,.6)), url('https://images.pexels.com/photos/244206/pexels-photo-244206.jpeg') center/cover;
            display: flex;
            align-items: center;
        }

            .hero h1 {
                font-size: 48px;
                font-weight: 700;
            }

            .hero p {
                font-size: 18px;
                opacity: .9;
            }

        /* BOOK CARD */
        .booking-card {
            background: #fff;
            padding: 30px;
            border-radius: 18px;
            box-shadow: 0 20px 50px rgba(0,0,0,.12);
        }

        /* SECTION */
        .section {
            padding: 80px 0;
        }

        /* WHY US */
        .why-card {
            background: #fff;
            padding: 30px;
            border-radius: 18px;
            text-align: center;
            box-shadow: 0 15px 40px rgba(0,0,0,.08);
        }

        .why-icon {
            width: 65px;
            height: 65px;
            background: linear-gradient(135deg,#ffc107,#ff9800);
            border-radius: 18px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 28px;
            color: #000;
            margin: 0 auto 15px;
        }

        /* CARS */
        .car-card img {
            border-radius: 16px;
        }

        .car-card {
            background: #fff;
            border-radius: 18px;
            padding: 20px;
            box-shadow: 0 15px 40px rgba(0,0,0,.08);
        }

        /* CTA */
        .cta {
            background: linear-gradient(135deg,#000,#333);
            color: #fff;
            border-radius: 20px;
            padding: 60px;
        }

        /* FOOTER */
        footer {
            background: #000;
            color: #aaa;
            padding: 30px 0;
        }
    </style>
</head>

<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top bg-dark">
        <div class="container">
            <a class="navbar-brand" href="#">🚕 TravelCab</a>
            <a href="Dashboard/Index/" class="btn btn-warning fw-bold">Book Now</a>
        </div>
    </nav>

    <!-- HERO -->
    <section class="hero text-white">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h1>Premium Cab Service <br> Pune to Konkan</h1>
                    <p class="mt-3">Safe • Comfortable • Affordable Outstation Cabs</p>
                    <a href="#booking" class="btn btn-warning btn-lg mt-3">Book Your Cab</a>
                </div>

                <div class="col-md-5 offset-md-1">
                    <div id="booking" class="booking-card">
                        <h5 class="fw-bold mb-3">Quick Booking</h5>
                        <input class="form-control mb-2" placeholder="Pickup Location">
                        <input class="form-control mb-2" placeholder="Drop Location">
                        <input type="date" class="form-control mb-2">
                        <select class="form-select mb-3">
                            <option>Select Car</option>
                            <option>Swift / Dzire</option>
                            <option>Ertiga</option>
                            <option>SUV</option>
                        </select>
                        <button class="btn btn-dark w-100 fw-bold">Check Fare</button>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- WHY US -->
    <section class="section">
        <div class="container text-center">
            <h2 class="fw-bold mb-5">Why Choose Us</h2>
            <div class="row g-4">
                <div class="col-md-3">
                    <div class="why-card">
                        <div class="why-icon"><i class="bi bi-shield-check"></i></div>
                        <h6 class="fw-bold">Verified Drivers</h6>
                        <p>Trained & background verified drivers</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="why-card">
                        <div class="why-icon"><i class="bi bi-currency-rupee"></i></div>
                        <h6 class="fw-bold">Best Price</h6>
                        <p>No hidden charges</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="why-card">
                        <div class="why-icon"><i class="bi bi-clock"></i></div>
                        <h6 class="fw-bold">On Time</h6>
                        <p>Punctual pickups & drops</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="why-card">
                        <div class="why-icon"><i class="bi bi-headset"></i></div>
                        <h6 class="fw-bold">24/7 Support</h6>
                        <p>Always available for help</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- CARS -->
    <section class="section bg-light">
        <div class="container text-center">
            <h2 class="fw-bold mb-5">Our Fleet</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="car-card">
                        <img src="https://images.pexels.com/photos/358070/pexels-photo-358070.jpeg" class="img-fluid">
                        <h6 class="fw-bold mt-3">Swift / Dzire</h6>
                        <p>Comfortable & economical</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="car-card">
                        <img src="https://images.pexels.com/photos/170811/pexels-photo-170811.jpeg" class="img-fluid">
                        <h6 class="fw-bold mt-3">Ertiga</h6>
                        <p>Perfect for family trips</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="car-card">
                        <img src="https://images.pexels.com/photos/116675/pexels-photo-116675.jpeg" class="img-fluid">
                        <h6 class="fw-bold mt-3">SUV</h6>
                        <p>Luxury & long-distance comfort</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA -->
    <section class="section">
        <div class="container">
            <div class="cta text-center">
                <h2 class="fw-bold">Ready to Travel?</h2>
                <p class="mt-2">Book your premium cab in just one click</p>
                <a href="https://wa.me/919876543210" class="btn btn-warning btn-lg mt-3">
                    <i class="bi bi-whatsapp"></i> Book on WhatsApp
                </a>
            </div>
        </div>
    </section>

    <!-- FOOTER -->
    <footer class="text-center">
        <p>📞 +91 9876543210 | ✉️ travelcab@gmail.com</p>
        <p>© 2026 TravelCab. All rights reserved.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

