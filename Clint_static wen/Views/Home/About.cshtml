@{
}
@{
    ViewData["Title"] = "About Us";
}

<!-- Hero Section -->
<section class="hero-section" style="height: 60vh; background: linear-gradient(rgba(0,0,0,0.8), rgba(0,0,0,0.8)), url('/images/about-bg.jpg') center/cover;">
    <div class="container h-100 d-flex align-items-center">
        <div class="row">
            <div class="col-lg-8">
                <h1 class="hero-title">About Javeriya Cabs</h1>
                <p class="lead">Your trusted travel partner for safe and comfortable journeys</p>
            </div>
        </div>
    </div>
</section>

<!-- About Content -->
<section class="py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6" data-aos="fade-right">
                <h2 class="mb-4">Our Story</h2>
                <p class="lead">
                    Javeriya Car Rental is a leading car rental service company in Nepal and India,
                    providing convenient and reliable transportation services to our customers.
                </p>
                <p>
                    We are committed to offering the best value for your money while ensuring safety and comfort.
                    Our fleet of vehicles includes modern cars, SUVs, vans, and minibuses, catering to various needs and preferences.
                </p>
                <p>
                    With a focus on customer satisfaction, we strive to provide exceptional service and ensure that
                    every journey is as smooth and enjoyable as possible.
                </p>
            </div>
            <div class="col-lg-6" data-aos="fade-left">
                <div class="card-3d p-4">
                    <img src="/images/about-image.jpg" alt="About Us" class="img-fluid rounded">
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Mission & Vision -->
<section class="py-5 bg-dark">
    <div class="container">
        <div class="row g-4">
            <div class="col-md-6" data-aos="fade-up">
                <div class="card-3d p-4 h-100">
                    <div class="text-center mb-4">
                        <i class="fas fa-bullseye fa-3x text-primary"></i>
                    </div>
                    <h3 class="text-center mb-4">Our Mission</h3>
                    <p class="text-center">
                        We aim to be the most efficient and customer-focused car rental service provider.
                        By offering high-quality vehicles, competitive rates, and excellent customer service,
                        we strive to become the preferred choice for travelers.
                    </p>
                </div>
            </div>
            <div class="col-md-6" data-aos="fade-up" data-aos-delay="200">
                <div class="card-3d p-4 h-100">
                    <div class="text-center mb-4">
                        <i class="fas fa-eye fa-3x text-primary"></i>
                    </div>
                    <h3 class="text-center mb-4">Our Vision</h3>
                    <p class="text-center">
                        Our vision is to be the leader in the car rental industry. We aspire to be known for
                        our innovative solutions, commitment to safety, and dedication to customer satisfaction.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Values -->
<section class="py-5">
    <div class="container">
        <h2 class="section-title" data-aos="fade-up">Our Values</h2>
        <div class="row g-4">
            <div class="col-md-4" data-aos="fade-up">
                <div class="card-3d text-center p-4">
                    <h4 class="text-primary">Empowering</h4>
                    <p>We empower our employees to deliver exceptional service and achieve business goals.</p>
                </div>
            </div>
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="100">
                <div class="card-3d text-center p-4">
                    <h4 class="text-primary">Safety</h4>
                    <p>We prioritize the safety of our customers and employees above everything else.</p>
                </div>
            </div>
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="200">
                <div class="card-3d text-center p-4">
                    <h4 class="text-primary">Innovation</h4>
                    <p>We foster a culture of innovation to drive growth and excellence in our services.</p>
                </div>
            </div>
        </div>
    </div>
</section>